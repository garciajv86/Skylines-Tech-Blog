<div class='text-center'>
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by: {{user.username}} on {{format_date createdAt}}</p>
  <p>Last Updated: {{user.username}} on {{format_date updatedAt}}</p>
</div>
{{#if logged_in}}
  {{#if comments.length}}
    <div class='comments-section'>
      <h3>Comments</h3>
      <ul>
        {{#each comments as |comment|}}
          <li>({{comment.user.username}}):{{comment.content}}</li>
        {{/each}}
      </ul>
    </div>
  {{else}}
    <p>No comments available.</p>
  {{/if}}
{{/if}}
{{#if logged_in}}
  <form data-blog-id='{{id}}' class='new-comment-form'>
    <textarea
      id='comment-content'
      rows='3'
      placeholder='Write a comment'
    ></textarea>
    <button type='submit'>Submit</button>
  </form>
{{/if}}

<script src='/js/commentHandler.js'></script>