<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Tech Blog</title>
    <link rel='stylesheet' href='/css/jass.css' />
    {{! <!-- BootStrap -->3001 }}
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css'
    />
    <!-- Relative path -->
    <link rel='stylesheet' href='/css/style.css' />
  </head>

  <body>
    <div class='flex-column justify-space-around'>
      <header
        class='display-flex justify-space-between align-center p-2 bg-info'
      >
        <h1>
          <a class='title bg-white rounded-pill p-1' href='/'>Skyline Tech Blog</a>
        </h1>
        <nav>
          <!-- Conditionally render login or logout links -->
          {{#if logged_in}}
            <a class='text-white' href='/'>Home</a>
            |
            <a class='text-white' href='/user'>Dashboard</a>
            |
            <button class='no-button text-white' id='logout'>Logout</button>
          {{else}}
            <a class='text-white' href='/'>Home</a>
            |
            <a class='text-white' href='/login'>Dashboard</a>
            |
            <a class='text-white' href='/login'>Login</a>
          {{/if}}
        </nav>
      </header>
      <main class='container container-fluid mt-5'>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>

      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src='/js/logout.js'></script>
    {{/if}}
  </body>

</html>