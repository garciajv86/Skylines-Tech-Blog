<div class='row'>
  <div class='col-auto'>
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class='row mt-4'>
  <div class='col-md-6'>
    <!-- Create a New Blog Form -->
    <h3>Create a New Blog:</h3>
    <form class='form new-blog-form'>
      <!-- Blog title input -->
      <div class='form-group'>
        <label for='blog-title'>blog title:</label>
        <input
          class='form-input'
          type='text'
          id='blog-title'
          name='blog-title'
        />
      </div>
      <!-- Blog content textarea -->
      <div class='form-group'>
        <label for='blog-content'>content:</label>
        <textarea
          class='form-input'
          id='blog-content'
          name='blog-content'
        ></textarea>
      </div>
      <!-- Create button -->
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Create</button>
      </div>
    </form>
  </div>

  <!-- Display Current Blogs -->
  {{#if blogs.length}}
    <div class='col-md-6 blog-list'>
      <h3>Current Blogs:</h3>

      {{#each blogs as |blog|}}
        <div class='row mb-2'>
          <div class='col-md-8'>
            <h4><a href='/blog/{{blog.id}}'>{{blog.title}}</a></h4>
          </div>
          <div class='col-md-4'>
            <button
              class='btn btn-sm btn-danger'
              data-id='{{blog.id}}'
            >DELETE</button>
          </div>
          <div class='col-md-12 blog-edit-form'>
            <form class='form edit-blog-form'>
              <input type='hidden' name='blog-id' value='{{blog.id}}' />
              <div class='form-group'>
                <label for='edit-blog-title'>Blog Title:</label>
                <input
                  class='form-input'
                  type='text'
                  id='edit-blog-title'
                  name='edit-blog-title'
                  value='{{blog.title}}'
                />
              </div>
              <div class='form-group'>
                <label for='edit-blog-content'>Content:</label>
                <textarea
                  class='form-input'
                  id='edit-blog-content'
                  name='edit-blog-content'
                >{{blog.content}}</textarea>
              </div>
              <div class='form-group'>
                <button type='submit' class='btn btn-primary'>Update</button>
              </div>
            </form>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src='/js/blogHandler.js'></script>